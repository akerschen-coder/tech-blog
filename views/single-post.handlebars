<div>
    <div>
        <h2>{{post.title}}</h2>
    </div>
    <div>
        posted by {{User.user_name}} on {{format_date createdAt}}
    </div>
    <p>{{post.body}}</p>
    {{#if post.Comment}}
    <div class="comments">
        <div>
            <h3>comments</h3>
        </div>

        <div>
            {{#each post.Comment}}
            <div>
                <p>{{body}}</p>
                <p>{{User.user_name}}, {{format_date createdAt}}</p>
            </div>
            {{/each}}
        </div>
    </div>
    {{/if}}

    <form id="editPost">
        <div>
            <h3>Add Comment</h3>
        </div>
        <div>
            <input type="hidden" name="post-id" value="{{post.id}}" />

            <label for="commentBody">Comment</label>

            <textarea name="commentBody"></textarea>

            <button class="btn" type="submit">submit</button>

 
        </div>

    </form>
</div>