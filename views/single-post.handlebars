<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">{{post.title}}</h5>
        <h6 class="card-subtitle mb-2 text-muted">{{User.user_name}} {{format_date createdAt}}</h6>
        <p class="card-text">{{post.body}}</p>
        {{#if post.Comment}}
        <h3>Comments</h3>
        {{#each post.Comments}}
        <p class="card-link">{{body}}</p>
        <p class="card-link">{{User.user_name}} {{format_date createdAt}}</p>
        {{/each}}
        {{/if}}
    </div>
</div>
